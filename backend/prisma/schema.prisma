model Cabinet {
  id          String   @id @default(uuid())
  address     String   // Адрес места нахождения
  name        String   // Наименование оборудованного учебного кабинета
  equipment   String   // Оснащенность оборудованного учебного кабинета
  accessibility String // Приспособленность для использования инвалидами
