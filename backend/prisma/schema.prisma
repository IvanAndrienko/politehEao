// Модель для руководства организации
model Manager {
  id        String   @id @default(uuid())
  fio       String   // ФИО
  post      String   // Должность
  telephone String   // Контактные телефоны
  email     String   // Адреса электронной почты
  type      String   // Тип: 'director', 'deputy', 'filial'
  filialName String? // Наименование филиала (для руководителей филиалов)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

