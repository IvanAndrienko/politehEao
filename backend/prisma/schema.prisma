// Модель для педагогического состава
model Employee {
  id                      String   @id @default(uuid())
  fio                     String   // Ф.И.О.
  post                    String   // Должность
  disciplines             String   // Перечень преподаваемых дисциплин
  educationLevel          String   // Уровень профессионального образования, квалификация
