  updatedAt   DateTime @updatedAt
}

// Модель для объектов для проведения практических занятий
model PracticeObject {
  id          String   @id @default(uuid())
  address     String   // Адрес места нахождения
  name        String   // Наименование объекта для проведения практических занятий
  equipment   String   // Оснащенность объекта для проведения практических занятий
  accessibility String // Приспособленность для использования инвалидами
