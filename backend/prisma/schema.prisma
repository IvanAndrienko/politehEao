  isActive    Boolean  @default(true) // Активен ли объект
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Модель для библиотек
model Library {
  id          String   @id @default(uuid())
  name        String   // Наименование объекта
  address     String   // Адрес места нахождения объекта
  area        Int      // Площадь, м²
  seats       Int      // Количество мест
  accessibility String // Приспособленность для использования инвалидами
  order       Int      @default(0) // Порядок отображения
  isActive    Boolean  @default(true) // Активна ли библиотека
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Модель для объектов спорта
model SportObject {
  id          String   @id @default(uuid())
  name        String   // Наименование объекта
