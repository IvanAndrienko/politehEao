generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model News {
  // Новости сайта
  id                Int      @id @default(autoincrement())
  title             String
  slug              String   @unique
  shortDescription  String?  @db.Text
  fullText          String   @db.Text
  previewImage      String?
  attachments       String[] // Массив URL файлов/документов
  images            String[] // Массив URL изображений для новости
  publishedAt       DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Admin {
  // Администраторы системы
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model SiteSettings {
  // Настройки сайта (контакты, соцсети)
  id        Int      @id @default(autoincrement())
  phone     String?
  email     String?
  address   String?
  vkLink    String?
  telegram  String?
  updatedAt DateTime @updatedAt
}

model Specialty {
  // Специальности для поступления
  id            String   @id @default(uuid())
  code          String   @unique
  name          String
  duration      String?
  form          String?
  qualification String?
  budgetPlaces  Int?
  paidPlaces    Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model RequiredDocument {
  // Документы для поступления
  id          String   @id @default(uuid())
  title       String
  description String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ImportantDate {
  // Важные даты поступления
  id        String   @id @default(uuid())
  date      String
  event     String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdmissionContact {
  // Контакты для поступления
  id        String   @id @default(uuid())
  type      String   // 'phone', 'email', 'address', 'schedule'
  title     String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dormitory {
  id          Int      @id @default(autoincrement())
  description String?
  address     String?
  images      String[] // Массив URL изображений
  updatedAt   DateTime @updatedAt
}

model StudyGroup {
  id            String   @id @default(uuid())
  code          String   @unique
  name          String
  fullName      String
  specialty     String?
  lessons       Lesson[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Lesson {
  id            String     @id @default(uuid())
  groupId       String
  group         StudyGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  dayOfWeek     Int        // 1-5 (понедельник-пятница)
  lessonNumber  Int        // 1-5 (номер пары)
  subject       String
  teacher       String
  room          String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Announcement {
  id          String   @id @default(uuid())
  title       String
  content     String   @db.Text
  date        DateTime @default(now())
  isUrgent    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StudentService {
  id          String   @id @default(uuid())
  title       String   // Название мероприятия/активности
  description String   // Описание
  url         String?  // URL ссылка для перенаправления
  icon        String   // Название иконки (например, 'FaHome')
  order       Int      @default(0) // Порядок отображения
  isActive    Boolean  @default(true) // Активен ли сервис
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StudentDocument {
  id          String   @id @default(uuid())
  title       String   // Название документа
  description String?  // Описание
  fileUrl     String   // Путь к файлу в uploads/documents/
  fileName    String   // Оригинальное имя файла
  fileSize    Int      // Размер файла в байтах
  fileType    String   // MIME тип файла
  category    String?  // Категория документа (справки, заявления и т.д.)
  isActive    Boolean  @default(true) // Активен ли документ
  order       Int      @default(0)    // Порядок отображения
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OrganizationInfo {
  id                    Int      @id @default(autoincrement())
  fullName              String   // Полное наименование
  shortName             String   // Сокращенное наименование
  creationDate          String   // Дата создания
  founderName           String   // Наименование учредителя
  founderAddress        String   // Адрес учредителя
  founderPhone          String   // Телефон учредителя
  founderEmail          String   // Email учредителя
  founderWebsite        String   // Сайт учредителя
  legalAddress          String   // Юридический адрес
  actualAddress         String   // Фактический адрес
  dormitoryAddress      String   // Адрес общежития
  workSchedule          String   // Режим работы
  directorName          String   // ФИО директора
  directorPhone         String   // Телефон директора
  deputyDirectorPhone   String   // Телефон зам. директора
  educationPhone        String   // Телефон учебной части
  hrPhone               String   // Телефон отдела кадров
  accountingPhone       String   // Телефон бухгалтерии
  email                 String   // Email организации
  website               String   // Официальный сайт
  activityAddress       String   // Место осуществления деятельности
  accreditationSeries   String   // Серия свидетельства аккредитации
  accreditationNumber   String   // Номер свидетельства аккредитации
  accreditationRegNum   String   // Регистрационный номер аккредитации
  accreditationDate     String   // Дата выдачи аккредитации
  accreditationExpiry   String   // Срок действия аккредитации
  licenseSeries         String   // Серия лицензии
  licenseNumber         String   // Номер лицензии
  licenseExpiry         String   // Срок действия лицензии
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model HomeSlider {
  id          String   @id @default(uuid())
  title       String   // Заголовок слайда
  subtitle    String?  // Подзаголовок
  imageUrl    String   // URL изображения
  link        String?  // Ссылка при клике
  order       Int      @default(0) // Порядок отображения
  isActive    Boolean  @default(true) // Активен ли слайд
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StudentLifeItem {
  id          String   @id @default(uuid())
  title       String   // Название мероприятия/активности
  description String   // Описание
  images      String[] // Массив имен файлов изображений
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Structure {
  id                    Int       @id @default(autoincrement())
  managementInfo        String?  // Руководитель
  managementInfo2       String?  // Коллегиальные органы управления
  managementLocation    String?  // Место нахождения органов управления
  managementContacts    String?  // Контакты органов управления
  hasFilials           Boolean   @default(false)
  filials              String[] // Массив филиалов (JSON строки)
  hasRepresentatives   Boolean   @default(false)
  representatives      String[] // Массив представительств (JSON строки)
  departments          Department[]
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model Department {
  id            String     @id @default(uuid())
  structureId   Int
  structure     Structure  @relation(fields: [structureId], references: [id], onDelete: Cascade)
  name          String     // Наименование органа управления / структурного подразделения
  fio           String     // ФИО руководителя
  post          String     // Должность руководителя
  phone         String?    // Контактный телефон
  address       String     // Адрес местонахождения
  site          String     // Адрес официального сайта
  email         String     // Адреса электронной почты
  document      String?    // Положение об органе управления/ о структурном подразделении
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model StructureDocument {
  id          String   @id @default(uuid())
  title       String   // Название документа
  description String?  // Описание документа
  fileUrl     String   // Путь к файлу
  fileName    String   // Оригинальное имя файла
  fileSize    Int      // Размер файла в байтах
  fileType    String   // MIME тип файла
  isActive    Boolean  @default(true) // Активен ли документ
  order       Int      @default(0) // Порядок отображения
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id          String   @id @default(uuid())
  field       String   @unique // Поле документа (ustavDocLink, localActStud и т.д.)
  fileUrl     String   // Путь к файлу
  fileName    String   // Оригинальное имя файла
  fileSize    Int      // Размер файла в байтах
  fileType    String   // MIME тип файла
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EducationalProgram {
  id            String   @id @default(uuid())
  code          String   // Код, шифр программы
  name          String   // Наименование программы
  level         String   // Уровень образования
  program       String   // Образовательная программа
  form          String   // Формы обучения
  description   String?  // Описание программы
  curriculum    String?  // Учебный план
  workPrograms  String?  // Рабочие программы
  schedule      String?  // Календарный график
  practices     String?  // Практики
  documents     String?  // Методические документы
  order         Int      @default(0) // Порядок отображения
  isActive      Boolean  @default(true) // Активна ли программа
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}


// === РАЗДЕЛ "ОБРАЗОВАНИЕ" В "СВЕДЕНИЯХ ОБ ОРГАНИЗАЦИИ" ===

// Модель для основной информации о реализуемых уровнях образования (Таблица 3.5.2)
model EducationProgram {
  id            String   @id @default(uuid())
  code          String   // Код, шифр
  name          String   // Наименование профессии, специальности, направления подготовки
  program       String   // Образовательная программа, направленность, профиль
  level         String   // Уровень образования
  form          String   // Формы обучения
  term          String   // Нормативный срок обучения
  subjects      String   // Учебные предметы, курсы, дисциплины
  practices     String   // Практики
  order         Int      @default(0) // Порядок отображения
  isActive      Boolean  @default(true) // Активна ли программа
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Модель для детальной информации об образовательных программах (Таблица 3.5.6)
model EducationalProgramDetail {
  id                  String   @id @default(uuid())
  code                String   // Код, шифр
  name                String   // Наименование профессии, специальности, направления подготовки
  level               String   // Уровень образования
  program             String   // Образовательная программа, направленность, профиль
  form                String   // Реализуемые формы обучения
  descriptionFile     String?  // Файл описания образовательной программы
  curriculumFile      String?  // Файл учебного плана
  workProgramsFile    String?  // Файл рабочих программ дисциплин
  scheduleFile        String?  // Файл календарного учебного графика
  practicesFile       String?  // Файл рабочих программ практик
  documentsFile       String?  // Файл методических документов
  order               Int      @default(0) // Порядок отображения
  isActive            Boolean  @default(true) // Активна ли программа
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// Модель для адаптированных образовательных программ (Таблица 3.5.7)
model AdaptedProgram {
  id            String   @id @default(uuid())
  code          String   // Код, шифр
  name          String   // Наименование профессии, специальности, направления подготовки
  level         String   // Уровень образования
  program       String   // Образовательная программа, направленность, профиль
  form          String   // Реализуемые формы обучения
  description   String?  // Ссылка на описание образовательной программы
  curriculum    String?  // Ссылка на учебный план
  workPrograms  String[] // Массив ссылок на рабочие программы дисциплин
  schedule      String?  // Ссылка на календарный учебный график
  practices     String?  // Ссылка на рабочие программы практик
  documents     String?  // Ссылка на методические документы
  order         Int      @default(0) // Порядок отображения
  isActive      Boolean  @default(true) // Активна ли программа
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Модель для научной деятельности (Таблица 3.5.8)
model ScientificActivity {
  id            String   @id @default(uuid())
  code          String   // Код, шифр
  name          String   // Наименование специальности, направления подготовки
  directions    String   // Перечень научных направлений
  program       String   // Образовательная программа, направленность, профиль
  level         String   // Уровень образования
  directionName String   // Название научного направления/научной школы
  results       String   // Результаты научной деятельности
  base          String   // Научно-исследовательская база
  order         Int      @default(0) // Порядок отображения
  isActive      Boolean  @default(true) // Активна ли запись
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Модель для трудоустройства выпускников (Таблица 3.5.9)
model GraduateEmployment {
  id            String   @id @default(uuid())
  code          String   // Код, шифр
  name          String   // Наименование профессии, специальности, направления подготовки
  program       String   // Образовательная программа, направленность, профиль
  graduates     Int      // Количество выпускников
  employed      Int      // Количество трудоустроенных выпускников
  year          String   // Учебный год (например, "2023/2024")
  order         Int      @default(0) // Порядок отображения
  isActive      Boolean  @default(true) // Активна ли запись
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Модель для хранения ссылок на документы образования
model EducationDocument {
  id          String   @id @default(uuid())
  title       String   // Заголовок документа
  description String?  // Описание документа
  fileUrl     String   // Путь к файлу
  fileName    String   // Оригинальное имя файла
  fileSize    Int      // Размер файла в байтах
  fileType    String   // MIME тип файла
  isActive    Boolean  @default(true) // Активен ли документ
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// === РАЗДЕЛ "ОБРАЗОВАТЕЛЬНЫЕ СТАНДАРТЫ И ТРЕБОВАНИЯ" ===

// Модель для образовательных стандартов и требований
model EducationalStandard {
  id            String   @id @default(uuid())
  code          String   // Код, шифр программы
  name          String   // Наименование программы
  level         String   // Уровень образования
  program       String   // Образовательная программа
  form          String   // Форма обучения
  // Федеральные государственные образовательные стандарты
  fedDocUrl     String?  // Ссылка на ФГОС
  fedDocName    String?  // Название файла ФГОС
  // Образовательные стандарты
  standartDocUrl String? // Ссылка на образовательный стандарт
  standartDocName String? // Название файла образовательного стандарта
  // Федеральные государственные требования
  fedTrebUrl    String?  // Ссылка на ФГТ
  fedTrebName   String?  // Название файла ФГТ
  // Самостоятельно устанавливаемые требования
  standartTrebUrl String? // Ссылка на самостоятельно устанавливаемые требования
  standartTrebName String? // Название файла самостоятельно устанавливаемых требований
  order         Int      @default(0) // Порядок отображения
  isActive      Boolean  @default(true) // Активен ли стандарт
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

