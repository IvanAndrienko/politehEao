  experience              String   // Стаж работы (лет)
  programs                String   // Наименование образовательных программ
  order                   Int      @default(0) // Порядок отображения
  isActive                Boolean  @default(true) // Активен ли сотрудник
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}
